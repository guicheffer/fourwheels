/* =============================================================================
	Local Variables
   =========================================================================== */

$max-width-screen = 1024px


/* =============================================================================
	General/Utils
   =========================================================================== */

body
	background $default-background-color
	max-width remify($max-width-screen)
	overflow-x hidden
  margin 0 auto
	*
		font-family 'Dosis', 'Helvetica', 'Verdana'
		box-sizing border-box

a
	color $white
	text-decoration none
	&:hover
		color $gray

.container
	width 95%
	margin 0 auto
	position absolute
	left 50%
	top 0
	transform translateX(-50%)

.adsbox
  background $default-background-ads
  cursor pointer
  display block
  &:before
    content 'Publicidade'
    background $gray-highlight
    float right
    opacity 0.6
    font-size remify(12px)
    padding remify(2px)
    text-transform uppercase
    transition opacity .1s ease-in-out
    top 0
  &:hover
    &:before
      opacity 1

.row
	clear both
	outline none
	width 100%
	&.row-center
		text-align center
		*
			margin-left auto
			margin-right auto

.btn
	outline 0
	border 0
	width auto
	padding remify(5px) remify(10px)
	font-weight 700
	text-align center
	transition all .2s ease-in-out
	&.btn-default
		background $lessofgray
	&.btn-selected
		background $kindablack
	&:hover
		&.btn-default
			color $gray
			background lighten($kindablack, 20)

.accessibility-aid
  visibility hidden
  clip rect(1px,1px,1px,1px)
  overflow hidden
  position absolute !important
  height 1px

.align-right
	text-align right !important

.only-GT-tablet, .only-UT-mobile
  display none

.menu-opened
  #content
    pointer-events none
    filter brightness(0.4)

